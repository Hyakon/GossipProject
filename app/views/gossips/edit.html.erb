<h1>Edit Potin</h1>

<%= form_tag url_for(action: 'update'), method: "put" do %>

  <%= label_tag 'Title' %>
  <%= text_field_tag 'gossip[title]', @gossip.title %>
  <br /> <br />

  <%= label_tag 'Content' %>
  <%= text_area_tag 'gossip[content]', @gossip.content %>
  <br /> <br />

  <%= submit_tag "Update Gossip" %>

<% end %>

