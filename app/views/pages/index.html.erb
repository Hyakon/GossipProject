<%= link_to 'Creer un potin', new_gossip_path %>
<div class="container m-6  columns is-mobile is-multiline is-centered">
  <% @gossips.each do |gossip| %>
    <div class="card m-3 column is-half is-mobile is-centered">
      <div class="card-content">
        <p class="title">
          <%= gossip.title %>
        </p>
        <p class="subtitle">
          <%= gossip.content %>
        </p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
      <span>
        <%= link_to 'View more', gossip_path(gossip) %>
      </span>
        </p>
        <p class="card-footer-item">
      <span>
        Auteur : <%= link_to user_path(gossip.user) do%><%=gossip.user.first_name + ' ' +   gossip.user.last_name%><%end%>
      </span>
        </p>
      </footer>
    </div>
  <% end %>
</div>